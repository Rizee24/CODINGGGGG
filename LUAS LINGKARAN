#include <iostream>
using namespace std;

int main() {
    double radius, luas;
    const double pi = 3.14159; // nilai konstanta pi
    
    cout << "Masukkan nilai radius lingkaran: ";
    cin >> radius;
    
    // rumus luas lingkaran
    luas = pi * radius * radius;
    
    cout << "Luas lingkaran dengan radius " << radius << " adalah " << luas << endl;
    
    return 0;
}
